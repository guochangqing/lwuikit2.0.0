<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lwuikit="http://schemas.android.com/apk/res/six.lwuikit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/button1"
            android:text="缩小"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button2"
            android:text="还原"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button3"
            android:text="重新开始"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button4"
            android:text="逐行滚动"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button5"
            android:text="像素滚动"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/button6"
            android:text="关闭遮罩"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button7"
            android:text="打开遮罩"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button8"
            android:text="下一首"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button9"
            android:text="字体+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button 
            android:id="@+id/button10"
            android:text="字体-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <six.lwuikit.lyrics.WordForWordView
        android:id="@+id/wordview"
        android:background="#363636"
        lwuikit:numRows="2"
        lwuikit:directions="1,0"
        lwuikit:fontSize="14sp"
        lwuikit:defaultString="hello world"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <TextView 
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <six.lwuikit.lyrics.LineByLineView 
        android:id="@+id/lineview"
        lwuikit:padding_y="8dp"
        lwuikit:fontSize="18sp" 
        lwuikit:touchMode="location"
        lwuikit:scrollMode="pixel"
        lwuikit:shadowable = "true"
        lwuikit:shadowHeight = "60dp"
        lwuikit:shadowFrontColor="#ff000000"
        lwuikit:shadowEndColor="#00000000"
        lwuikit:highlightColor="#ff0000"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
