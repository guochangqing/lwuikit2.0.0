<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lwuikit="http://schemas.android.com/apk/res/six.lwuikit"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<six.lwuikit.alphabet.AlphabetView 
	    android:id="@+id/alphabetview"
	    lwuikit:aFontSize="15sp"
	    lwuikit:focusDrawable="@drawable/alpha_playbackground"
	    android:layout_gravity="right"
	    android:layout_width="40dp"
	    android:layout_height="match_parent" />

	<LinearLayout
	    android:id="@+id/letterView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/ic_point_pink"
	    android:gravity="center"
	    android:layout_gravity="center"
	    android:visibility="gone" >

	    <TextView
	        android:id="@+id/letter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:textSize="42dp" />
	</LinearLayout>

</FrameLayout>