<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="@color/equalizer_custom_progressbar_color"
                    android:centerColor="@color/equalizer_custom_progressbar_color"
                    android:centerX="0.75"
                    android:endColor="@color/equalizer_custom_progressbar_color"
                    android:angle="0"
            />
            <padding
                 android:left="2dp"
                 android:right="2dp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="bottom" >
            <shape>
                <corners android:radius="5dip" />
                <gradient
                        android:startColor="@color/equalizer_custom_progressbar_color"
                        android:centerColor="@color/equalizer_custom_progressbar_color"
                        android:centerX="0.75"
                        android:endColor="@color/equalizer_custom_progressbar_color"
                        android:angle="0"
                />
                <padding
	                 android:left="2dp"
	                 android:right="2dp" />
            </shape>
        </clip>
    </item>

</layer-list>

